<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:orientation="vertical"
    tools:context=".HomeActivity">


    <EditText
        android:id="@+id/v2ray_config"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="445dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="38dp"
        android:layout_weight="1"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:gravity="top"
        android:hint="vless//xxxxxxxx/xxxxx"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_connection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_connection"
        android:layout_width="249dp"
        android:layout_height="54dp"
        android:layout_marginBottom="63dp"
        android:text="СОХРАНИТЬ КОНФИГУРАЦИЮ"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v2ray_config" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="386dp"
        app:layout_constraintBottom_toTopOf="@+id/v2ray_config"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings" />


</androidx.constraintlayout.widget.ConstraintLayout>