<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

        <TextView
            android:id="@+id/connection_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:text="connection mode : VPN_TUN"
            app:layout_constraintBottom_toTopOf="@+id/connected_server_delay"
            app:layout_constraintStart_toStartOf="@+id/connected_server_delay" />

        <Button
            android:id="@+id/button15"
            android:layout_width="161dp"
            android:layout_height="41dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="8dp"
            android:text="Button"
            app:layout_constraintBottom_toTopOf="@+id/imageButton4"
            app:layout_constraintEnd_toEndOf="@+id/imageButton4"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintStart_toStartOf="@+id/imageButton4" />

        <TextView
            android:id="@+id/connection_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="connection time : 00:00:00"
            app:layout_constraintStart_toStartOf="@+id/connected_server_delay"
            app:layout_constraintTop_toBottomOf="@+id/connected_server_delay" />

        <TextView
            android:id="@+id/server_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="server delay : tap to test"
            app:layout_constraintStart_toStartOf="@+id/connection_mode"
            app:layout_constraintTop_toBottomOf="@+id/connection_mode" />

        <TextView
            android:id="@+id/connection_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="connection speed : 0 B/s | 0 B/s"
            app:layout_constraintStart_toStartOf="@+id/connection_duration"
            app:layout_constraintTop_toBottomOf="@+id/connection_duration" />

        <TextView
            android:id="@+id/connected_server_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="364dp"
            android:layout_marginEnd="76dp"
            android:text="connected server delay : wait for connection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/connection_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="connection traffic : 0 B | 0 B"
            app:layout_constraintStart_toStartOf="@+id/connection_speed"
            app:layout_constraintTop_toBottomOf="@+id/connection_speed" />


        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="196dp"
            android:layout_height="55dp"
            android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/connection" />

        <ImageButton
            android:id="@+id/setting_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/settings" />

</androidx.constraintlayout.widget.ConstraintLayout>
